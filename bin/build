#!/bin/bash

set -e

agent_dir="$(cd "$(dirname "$0")" && cd .. && pwd)"
bin=$agent_dir/bin

pushd $GOPATH/src/github.com/cloudfoundry/bosh-agent/main
  $bin/go build -o $agent_dir/out/bosh-agent
popd

if [[ $GOOS = 'windows' ]]; then
  pushd $GOPATH/src/github.com/cloudfoundry/bosh-agent/jobsupervisor/pipe
    $bin/go build -o $agent_dir/out/bosh-agent-pipe
  popd
fi

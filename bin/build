#!/usr/bin/env bash
set -eu -o pipefail

ROOT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )/.." && pwd )"

pushd "${ROOT_DIR}/main"
  "${ROOT_DIR}/bin/go" build -o "${ROOT_DIR}/out/bosh-agent"
popd

if [[ "${GOOS}" = 'windows' ]]; then
  pushd "${ROOT_DIR}/jobsupervisor/pipe"
    "${ROOT_DIR}/bin/go" build -o "${ROOT_DIR}/out/bosh-agent-pipe"
  popd
fi

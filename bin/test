#!/usr/bin/env bash
set -eu -o pipefail

ROOT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )/.." && pwd )"

result=0

"${ROOT_DIR}/bin/test-unit"
(( result+=$? )) || true

"${ROOT_DIR}/bin/test-integration" # TODO this file does not exist
(( result+=$? )) || true

if [ "${result}" -eq 0 ]; then
  echo -e "\n\033[0;32mSUITE SUCCESS\033[0m"
else
  echo -e "\n\033[0;31mSUITE FAILURE\033[0m"
fi

exit "${result}"
